---
export interface proops {
  img: string;
  porfolio: string;
  role: string;
  name: string;
}

const { img, role, name, porfolio } = Astro.props;
---

<div>
  <a
    href={porfolio}
    class="group relative flex h-96 items-end overflow-hidden rounded-lg bg-gray-400 p-4 shadow-lg"
  >
    <img
      src={img}
      loading="lazy"
      alt={name}
      class="absolute inset-0 h-full w-full object-cover object-center transition duration-200 group-hover:scale-110"
    />

    <div
      class="relative flex w-full flex-col rounded-lg bg-black bg-opacity-40 p-4 text-center"
    >
      <span class="text-white">{role}</span>
      <span class="text-lg font-bold text-slate-300 lg:text-xl">{name}</span>
    </div>
  </a>
</div>
